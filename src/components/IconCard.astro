---
import Icon from "./Icon.astro"

const { icon, title, text } = Astro.props
---

<div class="hover:text-black dark:hover:text-white transition-colors">
	<Icon name={icon} class="shrink-0 size-9" />
	<div class="mt-5">
		<h3 class="font-semibold">
			{title}
		</h3>
		<p class="mt-1 font-serif">
			{text}
		</p>
	</div>
</div>
